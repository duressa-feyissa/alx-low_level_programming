CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: re oclean fclean clean all

all: $(NAME)

$(NAME): m.h $(OBJ)
# $@: replace by objective name
	$(CC) $(OBJ) -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
